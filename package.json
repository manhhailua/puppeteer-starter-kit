{
  "name": "puppeteer-starter-kit",
  "version": "0.2.0",
  "description": "Starter project for headless Chrome Node API using Puppeteer for UI Automation testing.",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run verify",
    "test": "jest",
    "test:helpers": "jest 'helpers/*/?(.*)(spec|test).js'",
    "test:pages": "npm test -- 'pages/*/?(.*)(spec|test).js'",
    "verify": "babel-node ./configs/verify.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manhhailua/puppeteer-starter-kit.git"
  },
  "keywords": [
    "puppeteer",
    "test",
    "end-to-end",
    "headless",
    "DevTools",
    "Node",
    "ui-automation"
  ],
  "author": "Manhhailua",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manhhailua/puppeteer-starter-kit/issues"
  },
  "homepage": "https://github.com/manhhailua/puppeteer-starter-kit#readme",
  "engines": {
    "node": ">=7.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.10.0",
    "jest": "^21.2.1",
    "puppeteer": "^0.12.0"
  },
  "dependencies": {
    "dotenv": "^4.0.0"
  },
  "jest": {
    "setupFiles": [
      "babel-polyfill",
      "<rootDir>/configs/setup.js"
    ],
    "verbose": true
  }
}
